package org.wonseok;

import java.awt.Button;
import java.awt.GridLayout;
import java.awt.Panel;

public class Calc extends MyFrame {
	
	Panel p = new Panel(new GridLayout(6,5, 0, 0));
//	Panel p2 = new Panel(new GridLayout(1,1,0,0));
	Button mcBtn = new Button("MC");
	Button[] btnArr = new Button[30];
	String[] str = new String[]{
			"MC","MR","MS","M+","M-","<-","CE","C","±","√","7","8","9","/","%","4","5","6","*","1/x","1","2","3","-","=","0",".","+","="
	};
	
	public Calc() {
		for(int i=0; i<str.length; i++)
		{
			
			btnArr[i] = new Button(str[i]);
//			if(i!=24)
//				p.add(btnArr[i]);
			p.add(btnArr[i]);
		}
		
		add("Center",p);
		setVisible(true);
	}
	
	public static void main(String[] args) {
		new Calc();
		
		
	}
}
