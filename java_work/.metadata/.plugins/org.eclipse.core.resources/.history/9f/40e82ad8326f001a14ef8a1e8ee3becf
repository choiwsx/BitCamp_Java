package org.wonseok.ch04_1;

import java.util.Scanner;

public class Ch04Ex06 {

	public Ch04Ex06() {
		System.out.println("디폴트 생성자 호.출.");
		run();
	}
	
	public void run()
	{
//		System.out.println("달리기 시작");
		switch(menu())
		{
		case 1: System.out.println("입력 기능"); break;
		case 2: System.out.println("출력 기능"); break;
		case 3: System.out.println("종료..."); 
			System.exit(0);
			break;
		default: System.out.println("해당사항없습니다");
		}
	
	}
	public int menu()
	{
		int no = 0;
		System.out.println("1.입력 2.출력 3.종료");
		System.out.print("선택: ");
		no = new Scanner(System.in).nextInt();
		return no;
	}
	
	public static void main(String[] args) {
		new Ch04Ex06();
	}
}
