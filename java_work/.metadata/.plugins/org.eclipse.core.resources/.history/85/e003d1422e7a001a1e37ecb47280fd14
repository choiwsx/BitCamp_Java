package org.wonseok;

import java.awt.Button;
import java.awt.GridLayout;
import java.awt.Panel;

public class Calc extends MyFrame {

	Panel p = new Panel(new GridLayout(5, 5, 0, 0));
	Panel p2 = new Panel(new GridLayout(1, 1, 0, 0));
	Button[] btnArr = new Button[25];
	String[] str = new String[] { "MC", "MR", "MS", "M+", "M-", "<-", "CE", "C", "±", "√", "7", "8", "9", "/", "%", "4",
			"5", "6", "*", "1/x"};
//	Button[] btnArr2 = new Button[8];
	Panel bot = new Panel(new GridLayout(2,3,0,0));
	Button one = new Button("1");
	Button two = new Button("2");
	Button three = new Button("3");
	Button minus = new Button("-");
	Button equal = new Button("=");
	public Calc() {
		System.out.println(str.length);
		for (int i = 0; i < str.length; i++) {
			btnArr[i] = new Button(str[i]);
			p.add(btnArr[i]);
		}
//		p2.add(one);
//		p2.add(two);
		p.add(one);
		p.add(two);
		p.add(three);
		p.add(minus);
		p2.add(equal);
		p.add(p2);
		

		add("Center", p);
		setVisible(true);
	}

	public static void main(String[] args) {
		new Calc();

	}
}
