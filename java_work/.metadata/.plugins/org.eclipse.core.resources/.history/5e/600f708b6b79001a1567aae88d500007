package org.wonseok;

import java.io.FileNotFoundException;
import java.io.FileReader;
import java.util.Iterator;
import java.util.Random;
import java.util.Scanner;
import java.util.Set;
import java.util.Vector;

public class OpenChallenge {
	public static void main(String[] args) throws FileNotFoundException {
		Scanner scan = new Scanner(new FileReader("words.txt"));
		Scanner scan2 = new Scanner(System.in);
		Vector<String> wordVector = new Vector<String>();
		while (scan.hasNext()) {
			String word = scan.nextLine();
			wordVector.add(word);
		}
		// System.out.println(wordVector);
		System.out.println("지금부터 행맨 게임을 시작합니다.");

		Random rand = new Random();
		int idx = rand.nextInt(wordVector.size());
		
		//랜덤 단어 고르기
		String tmp = wordVector.get(idx);
		
		// 2자리 랜덤 구하기.
		int tmp1 = rand.nextInt(tmp.length());
		int tmp2;
		while (true) {
			tmp2 = rand.nextInt(tmp.length());
			if (tmp1 != tmp2)
				break;
		}
		
		Vector<Character> v = new Vector<>();
		Vector<Integer> v2 = new Vector<>();
//		v.add(tmp.charAt(tmp1));
//		v.add(tmp.charAt(tmp2));
		v2.add(tmp1);
		v2.add(tmp2);
		for(int i=0; i<tmp.length(); i++)
		{
			if(i==tmp1||i==tmp2)
			{
				System.out.print('-');
			}else{
			System.out.print(tmp.charAt(i));
			}
		}
		System.out.println();
		
//		Iterator<Character> search = v.iterator();
		System.out.print(">>");
		char ans = scan2.next().charAt(0);
		
		
		
	}
}
