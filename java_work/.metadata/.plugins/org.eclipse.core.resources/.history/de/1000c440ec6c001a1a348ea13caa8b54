package org.study.ch03;

import java.util.Scanner;

public class Hello {
	public static Scanner sc = new Scanner(System.in);
	 static int[] days = {31, 29, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};
	 static int month = 0;
	 static int day = 0;
	 static int total = 0;
	 
	 
	 public static void main(String[] args) {
	  int monIn = 0;
	  int dayIn = 0;
	  int totalm = 366;
	  
	  //test();
	  
	  System.out.println("올해가 며칠 남았을까요?");
	  System.out.println("오늘부터 100일 후는 며칠일까요?");
	  System.out.println("오늘의 월 입력>>");
	  monIn= sc.nextInt();
	  System.out.println("오늘의 일 입력>>");
	  dayIn= sc.nextInt();
	  
	  int usertotal = 0;
	  for (int i = 0; i<monIn-1; i++) {
	   usertotal +=days[i];
	  }
	   
	  usertotal += dayIn;
	  System.out.println("--------");
	  System.out.printf("%d월 %d일부터 올해는 %d일 남았습니다.", monIn, dayIn, totalm-usertotal);
	  System.out.println("");
	  
	  
	  
	  int tempD = usertotal+100;
	  int tempM = 1;
	  //System.out.println(tempD+" "+tempM);
	  
	  
	  for(int i = 0; i<days.length ; i++) {
	   if(tempD > days[i]) {
	    tempD -= days[i];
	    tempM = i+2;
	    //System.out.println(tempD+" "+tempM+" "+i);
	   }  
	  }
	  
	  
	  System.out.printf("오늘부터 100일 후는 %d월 %d일입니다.", tempM, tempD);
	  
	  
	  
	  
	  
	  
	 }
	 
	 public static void test() {
	  // TODO Auto-generated method stub

	  
	  //total에 day요소값 누적. 1년은 365일입니다. 
	  
	//  for (int i = 0; i< 12; i++) {
	//   month = i+1;
	//   day = days[i];
	//   System.out.print(month+"월은 "+day+"일, ");
	//  }
	//  System.out.println();
	  
	  for(int k : days) {
	   int i = 1;
	   month = i;
	   day = k;
	   total += k;
	   //System.out.print(month+"월은 "+day+"일, ");
	   i++;
	  }
	  //System.out.println();
	  //System.out.println("1년은 "+days.length+"달, 총 "+total+"일 입니다.");
	  
	  
	  
	 }

	}
